	<bean id="UNIAUTH_RABBIT_OFF" class="java.lang.String">
		<constructor-arg>
			<value>UNIAUTH_RABBIT_OFF</value>
		</constructor-arg>
	</bean>
	
	<rabbit:connection-factory id="uniauth_mq_connectionFactory"
		host="#{uniauthConfig['rabbit.switch']=='on'?commonRabbitConfig['address']:UNIAUTH_RABBIT_OFF}"
		port="#{uniauthConfig['rabbit.switch']=='on'?commonRabbitConfig['port']:'9999'}"
		username="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.username']:UNIAUTH_RABBIT_OFF}"
		virtual-host="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.virtualHost']:UNIAUTH_RABBIT_OFF}"
		password="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.password']:UNIAUTH_RABBIT_OFF}" />

	<rabbit:admin connection-factory="uniauth_mq_connectionFactory" />

	<rabbit:queue id="user_add_queue" durable="true"
		auto-delete="false" exclusive="false"
		name="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.user.add.queue']:UNIAUTH_RABBIT_OFF}" />
		
	<rabbit:direct-exchange id="uniauth_exchange"
		durable="true" auto-delete="false"
		name="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.exchange']:UNIAUTH_RABBIT_OFF}">
		<rabbit:bindings>
			<rabbit:binding queue="user_add_queue"
				key="#{uniauthConfig['rabbit.switch']=='on'?uniauthConfig['rabbit.user.add.key']:UNIAUTH_RABBIT_OFF}" />
		</rabbit:bindings>
	</rabbit:direct-exchange>
	
	<rabbit:template id="uniauth_mq_template" exchange="uniauth_exchange"
		connection-factory="uniauth_mq_connectionFactory" />
</beans>